{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "labels": { },
    "namespace": "fhir"
  },
  "spec": {
    "activeDeadlineSeconds": 60,
    "ttlSecondsAfterFinished": 30,
    "template": {
      "spec": {
        "securityContext": {
          "fsGroup": 2000,
          "runAsGroup": 2000,
          "runAsUser": 1000
        },
        "containers": [
          {
            "args": [],
            "command": [
              "/usr/local/bin/delete"
            ],
            "env": [],
            "image": "gcr.io/fhir-org-starter-project/ig-build",
            "imagePullPolicy": "Always",
            "name": "ig-delete",
            "resources": {
              "requests": {
                "memory": "128Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/etc/ci_build_keys",
                "name": "keys"
              }
            ]
          }
        ],
        "restartPolicy": "Never",
        "volumes": [
          {
            "name": "keys",
            "secret": {
              "defaultMode": 288,
              "secretName": "ci-build-keys"
            }
          }
        ]
      }
    }
  }
}
