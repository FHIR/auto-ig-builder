{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "labels": { },
    "namespace": "fhir",
    "generateName": "ig-build"

  },
  "spec": {
    "activeDeadlineSeconds": 36000,
    "template": {
      "metadata": {
        "labels": { },
        "name": "ig-build"
      },
      "spec": {
        "volumes": [
          {
            "name": "keys",
            "secret": {
              "secretName": "ci-build-keys",
              "defaultMode": 256
            }
          },
          {
            "name": "fhir-settings",
            "secret": {
              "secretName": "fhir-settings",
              "defaultMode": 256
            }
          }
        ],
        "containers": [
          {
            "name": "ig-build",
            "image": "gcr.io/fhir-org-starter-project/ig-build",
            "imagePullPolicy": "Always",
            "env": [ ],
            "volumeMounts": [{
              "name": "keys",
              "mountPath": "/etc/ci_build_keys"
            },{
              "name": "keys",
              "subPath": "ig.builder.keyfile.ini",
              "mountPath": "/etc/ig.builder.keyfile.ini"
            },
            {
              "name": "fhir-settings",
              "subPath": "fhir-settings.json",
              "mountPath": "/etc/fhir-settings.json"
            }],
            "resources": {
              "requests": {
                "memory": "22Gi"
              },
              "limits": {
                "memory": "30Gi"
              }
            }
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
