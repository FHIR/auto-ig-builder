{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "labels": { },
    "namespace": "fhir",
    "generateName": "ig-build"

  },
  "spec": {
    "activeDeadlineSeconds": 3600,
    "template": {
      "metadata": {
        "labels": { },
        "name": "ig-build"
      },
      "spec": {
        "volumes": [
          {
            "name": "keys",
            "secret": {
              "secretName": "ci-build-keys",
              "defaultMode": 256
            }
          }
        ],
        "imagePullPolicy": "Always",
        "containers": [
          {
            "name": "ig-build",
            "image": "gcr.io/fhir-org-starter-project/ig-build",
            "env": [ ],
            "volumeMounts": [{
              "name": "keys",
              "mountPath": "/etc/ci_build_keys"
            }],
            "resources": {
              "requests": {
                "memory": "20Gi"
              },
              "limits": {
                "memory": "30Gi"
              }
            }
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
